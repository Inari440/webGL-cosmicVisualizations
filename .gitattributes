# Auto detect text files and perform LF normalization
* text=auto

# JS and CSS files must always use LF line endings
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf
*.glsl text eol=lf
*.vert text eol=lf
*.frag text eol=lf

# Images should be treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Exclude certain files/directories from exports
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
screenshots export-ignore 